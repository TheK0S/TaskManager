<Window x:Class="TaskManager.View.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager.View"
        mc:Ignorable="d"
        Background="Black"
        Title="AddWindow" Height="350" Width="600">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20 0" Width="500">
        <TextBlock Text="Введите заголовок задачи"/>
        <TextBox Text="{Binding CurrentTask.Title}"/>
        <TextBlock Text="Введите описание задачи"/>
        <TextBox Text="{Binding CurrentTask.Description}" TextWrapping="Wrap"/>
        <TextBlock Text="Выберите дату выполнения"/>
        <DatePicker SelectedDate="{Binding CurrentTask.End}" Background="Black"/>
        <TextBlock Text="Выберите приоритет" Margin="10"/>
        <ComboBox ItemsSource="{Binding Prioritis}" SelectedItem="{Binding SelectedPriority}"/>
        <Button Content="Добавить" Command="{Binding AddCommand}" Margin="0 20" Background="Black" Foreground="Gray"/>
    </StackPanel>
    
</Window>
